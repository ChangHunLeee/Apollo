<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.apollo.dao.TaskDAO">

    <select id="getTasks" parameterType="String" resultType="kr.or.apollo.vo.TaskDTO">
    select * from task where pid = #{pid}
    </select>
    
    <select id="getTasksInSteps" parameterType="String" resultType="kr.or.apollo.vo.TaskDTO">
    select * from taskinstep where sid = #{sid}
    </select>

</mapper>